---
import Navigation from "../components/Navigation.astro";
import ReducedMotionToggle from "../components/ReducedMotionToggle.astro";
import "../styles/global.css";

// Define layout props with defaults
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const {
  title = "Finntegrate - Simplifying Finnish Bureaucracy",
  description = "Finntegrate - Making Finnish immigration processes more accessible through AI-powered, multilingual guidance.",
  keywords = "Finntegrate, Finnish immigration, Finland, immigration, bureaucracy, AI, multilingual",
  ogImage = "/images/finntegrate-og.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

    <!-- Preload critical resources with SRI -->
    <link
      rel="preload"
      as="script"
      href="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
      integrity="sha384-9EQoUIJYrv09/oYhSxnw1VpLcfPw3BM9dE7+D/3wGUPeLLa7F9Z6OAoD+i/M6FK9"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="script"
      href="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"
      integrity="sha384-L0sjdcIWJ156WmvbxIBHx79j1WrCqANCyw456nl/aPWSYiHNywEU2VIAcbSJeIiX"
      crossorigin="anonymous"
    />

    <!-- Three.js and Vanta.js scripts with defer and SRI -->
    <script
      defer
      src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
      integrity="sha384-9EQoUIJYrv09/oYhSxnw1VpLcfPw3BM9dE7+D/3wGUPeLLa7F9Z6OAoD+i/M6FK9"
      crossorigin="anonymous"></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"
      integrity="sha384-L0sjdcIWJ156WmvbxIBHx79j1WrCqANCyw456nl/aPWSYiHNywEU2VIAcbSJeIiX"
      crossorigin="anonymous"></script>
  </head>
  <body>
    <div
      class="min-h-screen font-sans text-base-content bg-base-100 overflow-x-hidden"
    >
      <!-- Navigation -->
      <Navigation />

      <!-- Accessibility toggle for reduced motion -->
      <ReducedMotionToggle />

      <!-- Main content -->
      <slot />

      <!-- Footer -->
      <footer class="footer footer-center p-8 bg-neutral text-neutral-content">
        <div class="container mx-auto">
          <div
            class="flex flex-col md:flex-row justify-between items-center w-full"
          >
            <div class="flex items-center mb-4 md:mb-0">
              <a href="/" class="font-medium">Finntegrate</a>
            </div>
            <div class="text-sm">
              <p>Â© 2025 Finntegrate. An open-source project.</p>
            </div>
          </div>
        </div>
      </footer>
    </div>
    <!-- Load Vanta.js initialization script -->
    <script defer src="/scripts/vanta-init.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
