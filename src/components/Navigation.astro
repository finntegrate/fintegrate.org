---
import { Icon } from "astro-icon/components";
---

<nav
  class="navbar bg-base-100 bg-opacity-90 backdrop-blur-sm sticky top-0 z-50 shadow-sm"
>
  <div class="navbar-start">
    <a
      href="/"
      class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
    >
      Finntegrate
    </a>
  </div>
  <div class="navbar-end">
    <a href="/about" class="btn btn-ghost" aria-label="Mission & Vision">
      <Icon
        name="material-symbols:lightbulb-outline"
        class="h-5 w-5"
        aria-hidden="true"
      />
      <span>Mission & Vision</span>
    </a>
    <a href="/tapio" class="btn btn-ghost" aria-label="Tapio AI Assistant">
      <Icon
        name="material-symbols:smart-toy-outline"
        class="h-5 w-5"
        aria-hidden="true"
      />
      <span>Tapio</span>
    </a>
    <a href="/#contact" class="btn btn-ghost" aria-label="Contact">
      <Icon
        name="material-symbols:mail-outline"
        class="h-5 w-5"
        aria-hidden="true"
      />
      <span>Contact</span>
    </a>
    <a
      href="https://docs.finntegrate.org"
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-ghost btn-circle"
      aria-label="Research Documentation"
      title="Research Documentation"
    >
      <Icon name="material-symbols:book-5" class="h-5 w-5" aria-hidden="true" />
    </a>
    <a
      href="https://github.com/finntegrate/tapio"
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-ghost btn-circle"
      aria-label="GitHub"
      title="Source Code"
    >
      <Icon name="mdi:github" class="h-5 w-5" aria-hidden="true" />
    </a>
  </div>
</nav>
